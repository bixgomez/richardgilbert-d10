# Ignore core Drupal files managed by Composer
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Ignore the vendor directory
/vendor/

# Ignore files generated by Composer
composer.lock

# Ignore files that contain sensitive information
/web/sites/*/local.settings.php
/web/sites/*/services.yml
/web/sites/*/development.services.yml

# Ignore backup and log files
/web/sites/*/files
/web/sites/*/private

# Ignore Drupal site-specific directories
/web/sites/*/files/
/web/sites/*/phpunit.xml
/web/sites/*/phpunit.xml.dist

# Ignore system and editor-specific files
/.DS_Store
/.idea/
/node_modules/
/npm-debug.log*
/yarn-debug.log*
/yarn-error.log*
/package-lock.json
/.env

# Ignore compiled CSS and JS files
/web/sites/*/css/
/web/sites/*/js/
/web/sites/*/sass/
/web/sites/*/styles/

# Ignore Drush files
/drush/sites/
/drush/backups/
